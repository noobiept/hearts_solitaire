{
    "name": "hearts_solitaire",
    "version": "2.0.0",
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "dependencies": {
        "@drk4/utilities": "^3.2.0"
    },
    "devDependencies": {
        "@types/createjs": "0.0.29",
        "@types/jquery": "^3.3.31",
        "@types/jqueryui": "^1.12.7",
        "light-server": "^2.6.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "rimraf": "^3.0.0",
        "rollup": "^1.19.4",
        "rollup-plugin-css-only": "^1.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-typescript2": "^0.22.1",
        "typescript": "^3.5.3"
    },
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:rollup": "rollup --config rollup.config.js --watch",
        "dev:server": "light-server --serve . --port 8000 --open --quiet --watchexp \"scripts/**/*.js,css/**,index.html\"",
        "build": "npm-run-all --serial build:* test",
        "build:clean": "rimraf build/",
        "build:tsc": "tsc",
        "test": "jest ./tests/ --coverage",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\""
    }
}
